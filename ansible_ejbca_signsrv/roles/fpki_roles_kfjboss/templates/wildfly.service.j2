[Unit]
Description=The WildFly Application Server
After=syslog.target network.target
Before=httpd.service

[Service]
Environment=LAUNCH_JBOSS_IN_BACKGROUND=1
EnvironmentFile=-/etc/default/{{ jboss_user }}.conf
User={{ jboss_user }}
Group={{ jboss_group }}
LimitNOFILE=102642
PIDFile=/var/run/jboss-eap/jboss-eap.pid
ExecStart={{ jboss_home }}/bin/launch.sh $WILDFLY_MODE $WILDFLY_CONFIG $WILDFLY_BIND
StandardOutput=null

[Install]
WantedBy=multi-user.target